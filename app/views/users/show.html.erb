<div class="show-page">
  <div class="users">
    <%= render 'shared/user', user: @user %>
  </div>
  <div class="posts">
    <h2>Recent Posts</h2>
    <% if @recent_posts.present? %>
      <% @recent_posts.each do |post| %>
        <%= render 'shared/post', post: post, user: @user %>
      <% end %>
    <% else %>
      <p>No recent posts available.</p>
    <% end %>
  </div>
  <%= link_to 'See all posts', user_posts_path(@user) %>
</div>