<div class="show-page">
<div class="users">
<%= render 'shared/user', user:@user %>
</div>
<div class="posts">
<h2>Recent Posts</h2>
<% @recent_posts.each do |post| %>
<%= render 'shared/post', post:post, user:@user %>
<% end %>
</div>
<%=link_to 'See all posts', user_posts_path(@user) %>
<%= stylesheet_link_tag('index') %>
<div class="container">
  <div class="user">

   <img src="<%= image_path('example.com.png') %>" alt="image">
    <div class= "text-container">
      <h1>Username</h1>
      <p class= "inner-text">Number of posts x</p>

    </div>
  </div>
  <div>
    <h2>Bio</h2>
    <% @user.posts.each do |post| %>
      <p><%= post.body %></p>
    <% end %>
  </div>
</div>
